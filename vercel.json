{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10,
      "runtime": "nodejs22.x"
    }
  },
  "rewrites": [
    { "source": "/", "destination": "/public/boards/boards.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ]
}